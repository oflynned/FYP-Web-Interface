<html>
<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages': ['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = $.ajax({
                url: "http://localhost:3000/raw-data/{{repo}}",
                dataType: "JSON",
                async: false
            }).responseText;

            data = JSON.parse(data);

            var vis = new google.visualization.DataTable();
            vis.addColumn('date', 'Commit');
            vis.addColumn('number', "LOC");
            vis.addColumn('number', "Complexity");

            var i = 0;
            var groomed = [];

            data.forEach(function (d) {

                var currLOC = 0;
                var commit = new Date(d["commit_details"][0]["time"]);
                var complexity = d["average_complexity"][0]["avg_complexity"];

                for (var item in d["files"])
                    currLOC += d["files"][item]["loc"];

                groomed.push([commit, parseInt(currLOC), parseFloat(complexity)]);

                i++;
            });

            vis.addRows(groomed);

            var options = {
                title: 'LOC total v complexity over time for {{repo}}',
                legend: {position: 'bottom'},
                series: {
                    0: {targetAxisIndex: 0},
                    1: {targetAxisIndex: 1}
                },
                vAxes: {
                    0: {title: "LOC (Lines)"},
                    1: {title: "Complexity (Halstead)"}
                }
            };

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));
            chart.draw(vis, options);
        }
    </script>
</head>
<body>
<div id="curve_chart" style="width: 90vw; height: 90vh"></div>
</body>
</html>